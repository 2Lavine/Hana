.keyboard-box{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

    justify-content: space-around;
    align-content: center;
    padding: 4vh 6vw;
}

.keyboard-btn {
    text-align: center;
    font-weight: 520;
    font-size: 65rpx;
    width: 16vw;
    height: 12vw;
    line-height: 11vw;
    border: 1px solid grey;
    border-radius: 15%;
    margin-bottom: 3vw;
    background-color: whitesmoke;
    box-shadow: 1px 1px 5px #888888;
