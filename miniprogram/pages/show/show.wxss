.container {
  background-color: honeydew;
  height: 100vh;
  width: 100vw;
  padding-top: 0.5vw;
}

.tips-box {
  display: flex;
  align-items: flex-start;
}

.tips-tag {
  background-color: teal;
  color: white;
  margin: 3vw;
  width: 10vw;
  text-align: center;
}

.tips-content {
  flex: 1;
  margin-top: 3vw;
}

.user-tips {
  /* border: 1px solid rgb(207, 199, 199); */
  border-radius: 3%;

  border-bottom: 1px dashed grey;
  display: flex;
  flex-direction: column;
  margin: 2vw;
  margin-top: 4vw;
  padding-top: 2vw;
  background-color: whitesmoke;
  box-shadow: 1px 1px 3px #aaaaaa;
}

.userninfo-box {
  align-self: flex-end;
  margin-right: 5vw;
  display: flex;
  align-items: center;
}

.liked-box {
  font-size: 3vw;
  margin-right: 3vw;
  display: flex;
  align-items: center;
}

.username-box {
  line-height: 3vw;
  height: 3vw;
}

.likednum {
  margin-left: 5rpx;
}
